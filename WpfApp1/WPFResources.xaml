<Window x:Class="WpfApp1.WPFResources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WPFResources" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush Color="Blue" x:Key="brushResource"/>
    </Window.Resources>
    <StackPanel>
        <Rectangle Height="50" Fill="{StaticResource brushResource}" Margin="20" />
        <Rectangle Height="50" Fill="{DynamicResource brushResource}" Margin="20" />
        <Button x:Name="btnChangeResouce" Click="btnChangeResouce_Click" Background="#FFFFCCCC" Foreground="#FFA2FFA6" BorderBrush="#FFF13DD9">
            <Button.Content> change resouce </Button.Content>
             
        </Button>
    </StackPanel>
</Window>
